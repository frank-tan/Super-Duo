<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/overview_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        tools:context="barqsoft.footballscores.ui.AboutActivity$PlaceholderFragment"
        >

        <TextView android:text="@string/about_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:lineSpacingExtra="3dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_height="@dimen/tall_action_bar_height"
        android:layout_width="match_parent"
        android:background="@color/green05"
        app:theme="@style/AppTheme.ActionBar.WhiteText"
        app:layout_scrollFlags="scroll|enterAlways"
        />

</FrameLayout>